// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Domain {
  id        String   @id @default(uuid())
  domain    String   @unique
  imapHost  String   @map("imap_host")
  imapPort  Int      @map("imap_port")
  imapUser  String   @map("imap_user")
  imapPassword String @map("imap_password")
  active    Boolean  @default(true)
  createdAt DateTime @default(now()) @map("created_at")

  emails    Email[]

  @@map("domains")
}

enum EmailStatus {
  ACTIVE
  EXPIRED
}

model Email {
  id        String      @id @default(uuid())
  email     String      @unique
  domainId  String      @map("domain_id")
  domain    Domain      @relation(fields: [domainId], references: [id])
  createdAt DateTime    @default(now()) @map("created_at")
  expiresAt DateTime    @map("expires_at")
  status    EmailStatus @default(ACTIVE)

  messages  Message[]

  @@map("emails")
}

model Message {
  id          String   @id @default(uuid())
  emailId     String   @map("email_id")
  email       Email    @relation(fields: [emailId], references: [id], onDelete: Cascade)
  from        String
  subject     String?
  body        String?  @db.Text
  receivedAt  DateTime @map("received_at")
  messageHash String   @map("message_hash")

  @@unique([emailId, messageHash])
  @@map("messages")
}

model Admin {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String?
  createdAt DateTime @default(now()) @map("created_at")

  @@map("admins")
}

model ApiKey {
  id        String   @id @default(uuid())
  name      String
  key       String   @unique
  active    Boolean  @default(true)
  createdAt DateTime @default(now()) @map("created_at")
  lastUsed  DateTime? @map("last_used")

  @@map("api_keys")
}
